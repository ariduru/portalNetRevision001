@* Paketleme kullanıyorsanız bu bölümü kaldırın *@
@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Parolanızı mı Unuttunuz?";

    bool passwordSent = false;
    var resetToken = "";
    var email = Request.Form["email"] ?? Request.QueryString["email"];

    // Kurulum doğrulama
    Validation.RequireField("email", "E-posta adresi alanı zorunludur.");

    if (IsPost) {
        AntiForgery.Validate();
        // e-postayı doğrula
        bool isValid = true;
        if (Validation.IsValid()) {
            if (WebSecurity.GetUserId(email) > -1 && WebSecurity.IsConfirmed(email)) {
                resetToken = WebSecurity.GeneratePasswordResetToken(email); // İsteğe bağlı olarak, belirteç için bitiş tarihi belirtin
            } else {
                passwordSent = true; // Kullanıcının mevcut olmadığını açıklamak istemiyoruz.
                isValid = false;
            }
        }
        if (isValid) {
            var hostUrl = Request.Url.GetComponents(UriComponents.SchemeAndServer, UriFormat.Unescaped);
            var resetUrl = hostUrl + VirtualPathUtility.ToAbsolute("~/Account/PasswordReset?resetToken=" + HttpUtility.UrlEncode(resetToken));
            WebMail.Send(
                to: email,
                subject: "Lütfen parolanızı sıfırlayın", 
                body: "Parolanızı sıfırlamak için bu parola sıfırlama belirtecini kullanın. Belirteç: " + resetToken + @". Parolanızı sıfırlamak için <a href=""" + HttpUtility.HtmlAttributeEncode(resetUrl) + @""">" + resetUrl + "</a> adresini ziyaret edin."
            );
            passwordSent = true;
        }
    }
}

<hgroup class="title">
    <h1>@Page.Title.</h1>
    <h2>Parolanızı sıfırlamak için aşağıdaki formu kullanın.</h2>
</hgroup>

@if (!WebMail.SmtpServer.IsEmpty()) {
    <p>
        Parola sıfırlama yönergelerini hesabınızla ilişkilendirilen e-posta adresine göndereceğiz.
    </p>

    if (passwordSent) {
        <p class="message-success">
            Parolanızı sıfırlamaya yönelik yönergeler belirtilen e-posta adresine gönderildi.
        </p>
    }

    <form method="post">
        @AntiForgery.GetHtml()
        @Html.ValidationSummary(excludeFieldErrors: true)

        <fieldset>
            <legend>Parola Sıfırlama Yönergeleri Formu</legend>
            <ol>
                <li class="email">
                    <label for="email" @if (!ModelState.IsValidField("email")) {<text>class="error-label"</text>}>E-posta adresi</label>
                    <input type="text" id="email" name="email" value="@email" disabled="@passwordSent" @Validation.For("email") />
                    @Html.ValidationMessage("email")
                </li>
            </ol>
            <p class="form-actions">
                <input type="submit" value="Yönergeleri gönder" disabled="@passwordSent" />
            </p>
        </fieldset>
    </form>
} else {
   <p class="message-info">
       Bu web sitesi için parola kurtarma devre dışı bırakıldı; bunun nedeni SMTP sunucusunun 
       doğru yapılandırılmamasıdır. Lütfen parolanızı sıfırlamak için bu sitenin sahibiyle 
       temasa geçin.
   </p>
}